    bool
    prompt "4.0.0 (OBSOLETE)"
    depends on OBSOLETE

config CC_V_4_0_1
    bool
    prompt "4.0.1 (OBSOLETE)"
    depends on OBSOLETE

config CC_V_4_0_2
    bool
    prompt "4.0.2 (OBSOLETE)"
    depends on OBSOLETE


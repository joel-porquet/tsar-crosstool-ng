# Kernel options

menu "Kernel"

choice
    bool
    prompt "Target OS"
    default KERNEL_LINUX

config KERNEL_LINUX
    bool
    prompt "linux"
    help
      Build a toolchain targeting systems running Linux as a kernel.

config KERNEL_CYGWIN
    bool
    prompt "cygwin"
    depends on EXPERIMENTAL && ( ARCH_x86 || ARCH_x86_64 )
    help
      Build a toolchain targeting systems running Windows/cygwin as a kernel.

endchoice

config KERNEL_VERSION
    string

if KERNEL_LINUX
source config/kernel_linux.in
endif

if KERNEL_CYGWIN
source config/kernel_cygwin.in
endif

endmenu

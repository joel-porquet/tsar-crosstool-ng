# Kernel options

menu "Kernel"

choice
    bool
    prompt "Target OS"
    default KERNEL_LINUX

config KERNEL_LINUX
    bool
    prompt "linux"
    help
      Build a toolchain targeting systems running Linux as a kernel.

endchoice

config KERNEL_VERSION
    string

if KERNEL_LINUX
source config/kernel_linux.in
endif

endmenu

menu "binutils"

config BINUTILS_VERSION
    string

choice
    bool
    prompt "binutils version"

config BINUTILS_V_2_14
    bool
    prompt "2.14 (OBSOLETE)"
    depends on OBSOLETE

config BINUTILS_V_2_15
    bool
    prompt "2.15 (OBSOLETE)"
    depends on OBSOLETE

config BINUTILS_V_2_16_1
    bool
    prompt "2.16.1"

config BINUTILS_V_2_17
    bool

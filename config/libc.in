# C library options

menu "C-library"

choice
    bool
    prompt "C-library to use:"
    default LIBC_GLIBC

config LIBC_GLIBC
    bool
    prompt "glibc"

config LIBC_UCLIBC
    bool
    prompt "uClibc"

endchoice

config LIBC_VERSION
    string

config LIBC
    string
    default "glibc" if LIBC_GLIBC
    default "uClibc" if LIBC_UCLIBC

if LIBC_GLIBC
source config/libc_glibc.in
endif

if LIBC_UCLIBC
source config/libc_uClibc.in
endif

endmenu

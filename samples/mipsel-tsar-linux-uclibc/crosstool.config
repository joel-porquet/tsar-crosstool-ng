# we need experimental
CT_EXPERIMENTAL=y

# where to compile
CT_WORK_DIR="${CT_TOP_DIR}/_build"
# where to install
CT_PREFIX_DIR="${CT_TOP_DIR}/x-tools/${CT_TARGET}"

# local patches
CT_PATCH_BUNDLED_LOCAL=y
CT_LOCAL_PATCH_DIR="${CT_LIB_DIR}/samples/${CT_TARGET}/patches"

# tsar arch
CT_ARCH_FLOAT_SW=y
CT_ARCH_tsar=y
CT_TARGET_VENDOR="tsar"

# custom linux
CT_KERNEL_linux=y
CT_KERNEL_LINUX_CUSTOM=y
CT_KERNEL_LINUX_CUSTOM_LOCATION="${HOME}/work/linux"

# gcc 4.8.2
CT_CC_V_4_8_2=y

# custom uclibc
CT_LIBC_uClibc=y
CT_LIBC_UCLIBC_CUSTOM=y
CT_LIBC_UCLIBC_CUSTOM_LOCATION="${HOME}/work/uclibc"
CT_LIBC_UCLIBC_DEBUG_LEVEL_3=y
CT_LIBC_UCLIBC_CONFIG_FILE="${CT_LIB_DIR}/samples/${CT_TARGET}/uClibc.config"

